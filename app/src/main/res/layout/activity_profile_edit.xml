<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAll.ProfileEdit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/header_color"
            android:id="@+id/relative_header">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:id="@+id/img_back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/left_flat_arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profile Edit"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:id="@+id/tv_dashboard"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/ic_profile_edit"
                android:background="@drawable/save_icon"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            >

            <RelativeLayout android:layout_width="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:id="@+id/rl_upperr"
                android:background="@drawable/circleshape"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_height="@dimen/_60sdp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ic_profileedit_imageupload"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/provider_profile"
                    app:civ_border_color="@android:color/white"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_upperr"
                >
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ic_edit_pic"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circleshape"
                    />
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/edit_img">

                </ImageView>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_uploadInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Name"
            android:textColor="@color/fadeBlack"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat"
            >

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@android:color/darker_gray">

        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:id="@+id/et_userName_profileEdit"
            android:text="John Do"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:singleLine="true"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/white_shadowshape"
            >

        </EditText>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Email"
            android:textColor="@color/fadeBlack"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat"
            >

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@android:color/darker_gray">

        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:id="@+id/et_email_profileEdit"
            android:text="john.do@gmail.com"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:singleLine="true"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/white_shadowshape"
            >

        </EditText>









    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>