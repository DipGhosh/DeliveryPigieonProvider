<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/top_bar"
            android:id="@+id/relative_header">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ordfers"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:id="@+id/tv_dashboard"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/img_noti"
                android:background="@drawable/notification_icon" />


        </RelativeLayout>



        <FrameLayout
            android:id="@+id/frame_summer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_header">
            <com.dev.pigeonproviderapp.Utility.NonSwipeableViewpager
                android:id="@+id/viewpager_trainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tabs_layout" />


        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/tabs_layout"
            android:background="@android:color/darker_gray">

        </View>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_layout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentBottom="true"
            app:tabTextColor="@android:color/black"
            app:tabSelectedTextColor="@color/inputBorderColor"
            app:tabGravity="fill"
            android:elevation="2dp"
            app:tabTextAppearance="@style/MineCustomTabText"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>